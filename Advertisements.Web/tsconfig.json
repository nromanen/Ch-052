{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es2016", "dom"],
    "types": ["core-js"]
  },
  "awesomeTypescriptLoaderOptions": {
  "useWebpackText": true
  }
}
